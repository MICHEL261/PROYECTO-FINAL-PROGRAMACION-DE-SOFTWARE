@page
@model asp_presentaciones.Pages.Ventanas.UsuariosModel
@{
    ViewData["Titulo"] = "Usuarios";

}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Usuarios</h3>
            </div>
            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Nombre" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Apellido" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Email" />
                <input type="hidden"
                       asp-for="@Model.Actual!.NombreUsuario" />
<input type="hidden"
                       asp-for="@Model.Actual!.Contraseña" />
                       <input type="hidden"
                       asp-for="@Model.Actual!.Rol" />

            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Usuario</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Nombre" />
                            </div>
                        </div>
                       
                        
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Apellido
                            </label>
                            <div class="col-lg-6">
                                <input id="nmApellido"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Apellido" />
                            </div>

                        </div>

                        
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Email
                            </label>
                            <div class="col-lg-6">
                                <input id="nmEmail"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Email" />
                            </div>

                        </div>

                        
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                NombreUsuario
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombreUsuario"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.NombreUsuario" />
                            </div>

                        </div>

                        
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Contraseña
                            </label>
                            <div class="col-lg-6">
                                <input id="nmContraseña"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Contraseña" />
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">Roles</label>
                            <div class="col-lg-6">
                                <select id="nmRol"
                                        class="cts_forms form-control"
                                        asp-for="@Model.Actual!.Rol"
                                        asp-items="@(new SelectList(Model.Roles, "Id", "NombreRol"))">
                                </select>
                            </div>
                        </div>
                            </div>
                        </div>

            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }
            @if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger">
        @TempData["MensajeError"]
    </div>
}



            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">
                             
                                @Model.Actual!.Email,
                                @Model.Actual!.NombreUsuario


                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />


                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("MensajeError"))
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                @ViewData["MensajeError"]
                            </h4>

                            <br />
                            <br />



                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>


            }

            @if (ViewData.ContainsKey("MensajeExito"))
            {

                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                @ViewData["MensajeExito"]
                            </h4>

                            <br />
                            <br />



                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>


            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flNombre"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Id"
                       placeholder="Id" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Apellido

                            <th class="cl_actions">
                                Email
                            </th>
                            <th class="cl_actions">
                                NombreUsuario
                            </th>
                            <th class="cl_actions">
                                Contraseña
                            </th>
                            <th class="cl_actions">
                                Rol
                            </th>
                            <th class="cl_actions">
                                Accion
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Nombre
                                    </td>
                                    <td>
                                        @elemento.Apellido
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento.Email
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento.NombreUsuario
                                    </td>
                                     <td class="cl_hidden">
                                        @elemento.Contraseña
                                    </td>
                                     <td class="cl_hidden">
                                        @elemento._Rol!.NombreRol
                                    </td>

                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>