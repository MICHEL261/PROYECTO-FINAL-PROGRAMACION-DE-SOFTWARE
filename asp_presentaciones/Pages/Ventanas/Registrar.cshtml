@page
@model asp_presentaciones.Pages.Ventanas.RegistrarModel
@{
    ViewData["Title"] = "Registro de Usuario";
}

<h2>Registro de Usuario</h2>

<form method="post" style="color: black;">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Usuario.Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Apellido</label>
        <input asp-for="Usuario.Apellido" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Usuario.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Nombre de usuario</label>
        <input asp-for="Usuario.NombreUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label>Contraseña</label>
        <input asp-for="Usuario.Contraseña" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rol</label>
        <select id="nmRol"
                class="cts_forms form-control"
                asp-for="Usuario.Rol"
                asp-items="@(new SelectList(Model.Roles, "Id", "NombreRol"))">
        </select>
    </div>
    

    <button type="submit" class="btn btn-primary">Registrarse</button>
</form>