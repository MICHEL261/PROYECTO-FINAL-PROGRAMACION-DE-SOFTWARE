@page
@model asp_presentaciones.Pages.Ventanas.CarritoModel
@{
    ViewData["Titulo"] = "Carrito de Compras";
}

<h3>Carrito de Compras</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Disco</th>
            <th>Formato</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
            <th>Acciones</th>
        </tr>

    </thead>


    <tbody>
        @foreach (var item in Model.Lista)
        {
            <tr>
                <td>@item.Disco</td>
                <td>@item.Formato</td>
                <td>@item.Cantidad</td>
                <td>@item.ValorUnitario</td>
                <td>@(item.Cantidad* item.ValorUnitario)</td>
                <td>
                    <form method="post" asp-page-handler="Eliminar">
                        <input type="hidden" name="discoNom" value="@item.Disco" />
                        <input type="hidden" name="formatoId" value="@item.Formato" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<form method="post" asp-page-handler="Agregar">
    <div class="form-group">
        <label>Disco:</label>
        <input asp-for="NuevoItem.Disco" class="form-control" />
    </div>
    <div class="form-group">
        <label>Formato:</label>
        <input asp-for="NuevoItem.Formato" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cantidad:</label>
        <input asp-for="NuevoItem.Cantidad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Precio Unitario:</label>
        <input asp-for="NuevoItem.ValorUnitario" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Agregar al Carrito</button>
</form>


<h4>
    <h4>Total: @Model.Total.ToString("C")</h4>

    <form method="post" asp-page-handler="Finalizar">

        <label>Cliente ID:</label>
        <input type="number" name="clienteId" required class="form-control" />

        <label>Pago:</label>
        <input type="number" name="pagoId" required class="form-control" />
        <br />

        <input type="submit" name="accion" value="Confirmar" class="btn btn-success" />
    </form>
    <form method="post" asp-page-handler="Finalizar">
        <input type="hidden" name="accion" value="Cancelar" />
        <button type="submit" class="btn btn-danger">Cancelar</button>
    </form>
