@page
@model asp_presentaciones.Pages.Ventanas.OrdenesDiscosModel
@{
    ViewData["Titulo"] = "OrdenesDiscos";

}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>OrdenesDiscos</h3>
            </div>
            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Orden" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Disco" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Formato" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Cantidad" />
                <input type="hidden"
                       asp-for="@Model.Actual!.ValorUnitario" />

            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Orden Disco</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Ordenes</label>
                            <div class="col-lg-6">
                                <select asp-for="Actual.Orden"
                                        asp-items="@(new SelectList(Model.Ordenes, "Id", "Descripcion"))"
                                        class="cts_forms form-control">
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Disco
                            </label>
                            <div class="col-lg-6">
                                <select id="nmDisco"
                                        class="cts_forms form-control"
                                        asp-for="@Model.Actual!.Disco"
                                        asp-items="@(new SelectList(Model.Discos, "Id", "NombreDisco"))">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Formato
                            </label>
                            <div class="col-lg-6">
                                <select id="nmFormato"
                                        class="cts_forms form-control"
                                        asp-for="@Model.Actual!.Formato"
                                        asp-items="@(new SelectList(Model.Formatos, "Id", "TipoFormato"))">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Cantidad
                            </label>
                            <div class="col-lg-6">
                                <input id="nmCantidad"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Cantidad" />
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">
                                    ValorUnitario
                                </label>
                                <div class="col-lg-6">
                                    <input id="nmValorUnitario"
                                           class="cts_forms form-control"
                                           asp-for="@Model.Actual!.ValorUnitario" />
                                </div>

                            </div>



                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }
            @if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger">
        @TempData["MensajeError"]
    </div>
}



            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!.Orden,
                                @Model.Actual!.Disco,
                                @Model.Actual!.Formato,
                                @Model.Actual!.Cantidad,
                                @Model.Actual!.ValorUnitario

                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />


                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("MensajeError"))
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                @ViewData["MensajeError"]
                            </h4>

                            <br />
                            <br />



                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>


            }

            @if (ViewData.ContainsKey("MensajeExito"))
            {

                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                @ViewData["MensajeExito"]
                            </h4>

                            <br />
                            <br />



                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>


            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flNombre"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Id"
                       placeholder="Id" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                Orden
                            </th>
                            <th>
                                Disco

                            <th class="cl_actions">
                                Formato
                            </th>
                            <th class="cl_actions">
                                Cantidad
                            </th>
                             <th class="cl_actions">
                                ValorUnitario
                              </th>
                            <th class="cl_actions">
                                Accion
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Orden
                                    </td>
                                    <td>
                                        @elemento._Disco!.NombreDisco
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento._Formato!.TipoFormato
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento.Cantidad
                                    </td>
                                    <td class="cl_hidden">
                                      @elemento.ValorUnitario
                                     </td>

                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>